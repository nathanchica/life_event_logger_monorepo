{
  "name": "life_event_logger_monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Life Event Logger application, containing CRA frontend repo and GQL Yoga backend repo",
  "homepage": "https://github.com/nathanchica/life_event_logger_monorepo#readme",
  "bugs": {
    "url": "https://github.com/nathanchica/life_event_logger_monorepo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanchica/life_event_logger_monorepo.git"
  },
  "author": "Nathan Chica",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm start",
    "dev:web": "cd apps/web && npm start",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "lint": "npm run lint:web && npm run lint:api && npm run lint:utils",
    "lint:web": "cd apps/web && npm run lint",
    "lint:api": "cd apps/api && npm run lint",
    "lint:utils": "cd packages/utils && npm run lint",
    "typecheck": "npm run typecheck:web && npm run typecheck:api && npm run typecheck:utils",
    "typecheck:web": "cd apps/web && npm run typecheck",
    "typecheck:api": "cd apps/api && npm run typecheck",
    "typecheck:utils": "cd packages/utils && npm run typecheck",
    "test": "npm run test:web && npm run test:api && npm run test:utils",
    "test:web": "cd apps/web && npm test",
    "test:api": "cd apps/api && npm test",
    "test:utils": "cd packages/utils && npm test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  }
}
