{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "npm run vercel-build",
    "functions": {
        "api/**/*.ts": {
            "maxDuration": 10,
            "includeFiles": "src/schema/**/*.graphql"
        }
    },
    "crons": [
        {
            "path": "/api/cron/daily",
            "schedule": "0 8 * * *"
        }
    ]
}
